<h2>Create initial admin user</h2>

<% if @user.errors.any? -%>
<p class="errorExplanation">Please check over your name and email address below.</p>
<% end -%>

<% @user.password = @user.password_confirmation = nil %>

<%= form_for :user, :url => create_initial_user_url, :html => { :method => :get, :class => 'signup', :id => 'signup_form' } do |f| -%>

<table><tr><td>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
</td><td>
  <%= f.label :middle_name, "MI" %>
  <%= f.text_field :middle_name %><span class="optional">(optional)</span>
</td><td>
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
</td></tr><tr><td colspan="4">

<%= f.label :email %>
<%= f.text_field :email %>
</td></tr><tr><td colspan="4">

<%= f.label :password %>
<%= f.password_field :password %>
</td></tr><tr><td colspan="4">

<%= f.label :password_confirmation, 'Confirm password' %>
<%= f.password_field :password_confirmation %>
</td></tr></table>

<p><%= submit_tag raw('Submit') %></p>
<% end -%>
