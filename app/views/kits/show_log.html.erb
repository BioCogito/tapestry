<h2>Kit log for <%= @kit.name %></h2>

<% if not @kit_log.empty? then %>

  <table class="admin_table">
    <tr>
      <th>When</th>
      <th>Who</th>
      <th>What</th>
    </tr>
  <% @kit_log.each do |log| %>
    <tr>
      <td><%= log.created_at %></td>
      <td><%= log.actor.is_researcher? ? log.actor.full_name : link_to(log.actor.hex, public_profile_path(log.actor.hex)) %></td>
      <td>
	<%= log.comment %>
      	<% if log.controlling_user and log.controlling_user != log.actor %>
	<i>(action performed by <%= log.controlling_user.full_name %>)</i>
	<% end %>
      </td>
    </tr>
  <% end %>
  </table>
<% else %>
  There are no log entries yet for this kit.
<% end %>

