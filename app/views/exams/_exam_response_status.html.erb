<% if ! exam_response.nil? %>
  <%= link_to "
        Retake: #{exam_version.title}
        (#{exam_response.correct_response_count} of #{exam_version.question_count} correct)
      ", content_area_retake_exam_path(content_area, exam), :method => 'post' %>
<% else %>
  <%= link_to "#{exam.title} (#{pluralize exam_version.exam_questions.count, 'question'})",
              content_area_start_exam_path(content_area, exam), :method => 'post' %>
<% end %>
