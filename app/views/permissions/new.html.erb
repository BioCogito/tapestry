<script type="text/javascript">
jQuery(function($) {
  $("#permission_subject_class").change(function() {
    // make a POST call and replace the content
    var subject_class = $('select#permission_subject_class :selected').val();
    if(subject_class == "") subject_class="0";
    jQuery.get( '<%= permissions_update_subject_select_path %>/' + subject_class);
    return false;
  });
})
</script>

