<h2>Identity Questionnaire</h2>

<p>Confirm your identity by entering your home address:</p>

<%= form_for :identity_confirmation do |f| %>
  <div class="input">
    <%= f.label 'address1' %><br/>
    <%= f.text_field 'address1' %>
  </div>
  <div class="input">
    <%= f.label 'address2' %><br/>
    <%= f.text_field 'address2' %>
  </div>
  <div class="input">
    <%= f.label 'city' %><br/>
    <%= f.text_field 'city' %>
  </div>
  <div class="input">
    <%= f.label 'state' %><br/>
    <%= f.text_field 'state' %>
  </div>
  <div class="input">
    <%= f.label 'zip' %><br/>
    <%= f.text_field 'zip' %>
  </div>
  <%= f.submit 'Submit' %>
<% end %>

