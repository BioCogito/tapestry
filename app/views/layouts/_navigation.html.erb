<div class="menu">
  <ul class="links">
    <% unless current_user -%>
      <%= nav_element 'Log in', login_url %>
    <% else -%>
      <%= nav_element 'Home', root_url %>
      <%= nav_element 'Account', edit_user_url(current_user) if !current_user.deactivated_at %>
      <%= nav_element 'Log out', logout_url %>
      <% if current_user.is_researcher? or current_user.is_admin? %>
        <li><%= link_to 'Researcher Tools', '/pages/researcher_tools' %></li>
      <% end %>
      <% if current_user.is_admin? %>
        <li <%= 'class="current"' if in_admin_section? %> ><%= link_to 'Admin', admin_root_url %></li>
      <% end %>
    <% end -%>
  </ul>
</div>
<% if in_admin_section? %>
  <div class="menu" style="margin-top: 0px;">
    <ul class="sublinks">
      <%= nav_element 'Users', admin_users_path %>
      <%= nav_element 'Exams', admin_content_areas_path %>
      <%= nav_element 'PHR Reports', admin_phr_reports_path %>
      <%= nav_element 'Invited Email Addresses', admin_invited_emails_path %>
      <%= nav_element 'Mailing Lists', admin_mailing_lists_path %>
    </ul>
  </div>
<% end %>
