<h2>Editing answer option</h2>

<%= form_for @answer_option, :as => :answer_option,
            :url => admin_content_area_exam_exam_version_exam_question_answer_option_path(
              @content_area,
              @exam,
              @exam_version,
              @exam_question,
              @answer_option),
            :html => { :method => :put } do |f| %>

  <%= error_messages_for :answer_option, :header_message => 'Error: data could not be saved.', :message => nil %>
  <%= render :partial => 'form', :locals => { :f => f } %>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>
