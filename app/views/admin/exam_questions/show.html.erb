<h2><%=h @exam_question.exam_version.title %> Question # <%= @exam_question.ordinal %></h2>

<p>
  <b>Question:</b>
  <%=h @exam_question.question %>
</p>

<p>
  <b>Kind:</b>
  <%=h @exam_question.kind %>
</p>

<p>
  <b>Ordinal:</b>
  <%=h @exam_question.ordinal %>
</p>

<p>
  <strong>Statistics:</strong><br/>
  <table class="admin_table">
    <tr class="even"><td>Number of times answered:</td><td align="right"><%= @all %></td><td align="right">100.00%</td></tr>
    <tr class="odd"><td>Number of times answered correctly:</td><td align="right"><%= @correct %></td><td align="right"><%= @correct_percent %></td></tr>
    <tr class="even"><td>Number of times answered incorrectly:</td><td align="right"><%= @incorrect %></td><td align="right"><%= @incorrect_percent %></td></tr>
  </table>
</p>

<h2>Answer Options</h2>

<table class="admin_table">
  <tr>
    <th>Answer</th>
    <th>Correct?</th>
  </tr>

<% for answer_option in @answer_options %>
  <tr class="<%= cycle 'even', 'odd' %>">
    <td><%=h answer_option.answer %></td>
    <td><%= answer_option.correct? ? 'Yes' : 'No' %></td>
    <td><%= link_to 'Edit', edit_admin_content_area_exam_exam_version_exam_question_answer_option_path(@content_area, @exam, @exam_version, @exam_question, answer_option) %></td>
    <td><%= link_to 'Destroy',   admin_content_area_exam_exam_version_exam_question_answer_option_path(@content_area, @exam, @exam_version, @exam_question, answer_option), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<p>
  <%= link_to 'Add a new answer option', new_admin_content_area_exam_exam_version_exam_question_answer_option_path(@content_area, @exam, @exam_version, @exam_question) %>
</p>

