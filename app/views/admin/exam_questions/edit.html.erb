<h2>Editing exam question</h2>

<%= form_for @exam_question, :as => :exam_question,
            :url => admin_content_area_exam_exam_version_exam_question_path(
              @content_area,
              @exam,
              @exam_version,
              @exam_question),
            :html => { :method => :put } do |f| %>

  <%= error_messages_for :exam_question, :header_message => 'Error: data could not be saved.', :message => nil %>
  <%= render :partial => 'form', :locals => { :f => f } %>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>
