<h2>Edit mailing list</h2>

<%= form_for([:admin, @mailing_list]) do |f| %>
  <%= error_messages_for :mailing_list, :header_message => 'Error: data could not be saved.', :message => nil %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Back', admin_mailing_lists_path %>
