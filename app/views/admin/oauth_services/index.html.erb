<%= button_to 'New Oauth service', new_admin_oauth_service_path, :class => 'btn btn-primary pull-right', :method => 'get' %>

<h2>OAuth services</h2>

<table class="admin_table table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Scope</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>

<% @admin_oauth_services.each do |admin_oauth_service| %>
  <tr>
    <td><%= admin_oauth_service.name %></td>
    <td><%= admin_oauth_service.oauth2_service_type %></td>
    <td><%= admin_oauth_service.scope %></td>
    <td><%= link_to 'Show', [:admin, admin_oauth_service] %></td>
    <td><%= link_to 'Edit', edit_admin_oauth_service_path(admin_oauth_service) %></td>
    <td><%= button_to 'Destroy', admin_oauth_service_path(admin_oauth_service), :confirm => 'Are you sure?', :method => :delete unless !admin_oauth_service.oauth_tokens.empty? %></td>
  </tr>
<% end %>

  </tbody>
</table>
