<%= error_messages_for :device_type, :header_message => 'Error: data could not be saved.', :message => nil %>

<%= form_for(@device_type) do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
