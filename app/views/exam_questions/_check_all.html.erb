<div class="question">
  <p><%= @exam_question.question %></p>

  <%= form_tag answer_content_area_exam_exam_question_path(@content_area, @exam, @exam_question) do %>

    <% @answer_options.each_with_index do |answer_option, i| -%>
      <%= check_box_tag "answer[#{ answer_option.id }]", answer_option.id, false %>
      <label for="answer[<%= answer_option.id %>]">
        <%= answer_option.answer %>
      </label><br/>
    <% end -%>
    <%= submit_tag 'Next' %>
  <% end %>
</div>

