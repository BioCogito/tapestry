<div style="display:table" id="participant-dashboard">
  <div style="display:table-row">
    <div style="display:table-cell; width: 25%">
      <%= render_cell :news_item, :feed, :user => current_user %>
    </div>
    <div style="display:table-cell; width: 5%">
    </div>
    <div style="display:table-cell; width: 40%">
      <h2>Your public profile / participation overview</h2>
      <%= render_cell :study, :dashboard_summary, :user => current_user %>
      <%= render_cell :ccr, :dashboard_summary, :user => current_user %>
      <%= render_cell :family_relation, :dashboard_summary, :user => current_user %>
      <%= render_cell :survey, :dashboard_summary, :user => current_user %>
    </div>
    <div style="display:table-cell; width: 5%">
    </div>
    <div style="display:table-cell; width: 25%">
      <h2>Your account</h2>
    </div>
  </div>
</div>

