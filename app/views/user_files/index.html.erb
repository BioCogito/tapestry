<h2>Uploaded data</h2>

<p>This information will appear in your public profile.</p>

<% if @user_files != [] %>

<h3>Uploaded datasets</h3>
<table class="admin_table">
  <tr>
    <th>Date</th>
    <th>Data Type</th>
    <th>Name</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
  </tr>
  <% @user_files.each do |g| -%>
    <tr class="<%= cycle 'even', 'odd' %>">
      <td><%=h g.date %></td>
      <td><%=h g.data_type %></td>
      <td><%=h g.name %></td>
      <td><%= link_to 'Download', user_file_download_path(g.id) %></td>
      <td><%= link_to 'Edit', edit_user_file_path(g) %></td>
      <td><%= link_to 'Delete', user_file_path(g.id), :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>
<%= will_paginate @user_files %>

<% else %>

  You have no uploaded datasets.

<% end %>

<p />

<%= link_to 'Upload a new dataset', new_user_file_path %>
