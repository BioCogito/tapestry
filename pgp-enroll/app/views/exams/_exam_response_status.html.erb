<% if ! exam_response.nil? -%>
  <%= link_to "
        Retake: #{h(exam_version.title)}
        (#{exam_response.correct_response_count} of #{exam_version.question_count} correct)
      ", retake_content_area_exam_path(content_area, exam), :method => 'post' %>
<% else -%>
  <%= link_to h(exam.title), start_content_area_exam_path(content_area, exam), :method => 'post' %>
<% end -%>
