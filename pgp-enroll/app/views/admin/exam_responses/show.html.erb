<h2>Exam Response</h2>

<p>Details:<br/>
  <%=h @exam_response.exam_version.exam.content_area.title %><br/>
  <%=h @exam_response.exam_version.title %><br/>
  <%= format_exam_response_results(@exam_response) %><br/>
  <% if @exam_response.user -%>
    <%= link_to h(@exam_response.user.name), edit_admin_user_url(@exam_response.user) %><br/>
  <% else -%>
    <%= link_to h(@exam_response.original_user.name), edit_admin_user_url(@exam_response.original_user) %> (previous attempt)<br/>
  <% end -%>
</p>

<table class="admin_table">
  <tr>
    <th>Question</th>
    <th>Answer</th>
    <th>Correct Answer</th>
  </tr>

<% for question_response in @question_responses %>
  <tr class="<%= cycle 'even', 'odd' %>">
    <td><%= link_to h(truncate(question_response.exam_question.question)),
              admin_content_area_exam_exam_version_exam_question_url(@content_area, @exam, @exam_version, question_response.exam_question) %></td>
    <td><%=h question_response.answer %></td>
    <td><%=h question_response.exam_question.correct_answer %></td>
  </tr>
<% end %>
</table>

